<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login-control</servlet-name>
        <servlet-class>com.gmail.evgenymoshchin.app.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-control</servlet-name>
        <url-pattern>/login-control</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.gmail.evgenymoshchin.app.listener.InitialListener</listener-class>
    </listener>
</web-app>
